    "hsluv",
    "typescript"
  ],
  "author": "John Haugeland <stonecypher@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StoneCypher/hsluv-ts/issues"
  },
  "homepage": "https://github.com/StoneCypher/hsluv-ts#readme",
  "devDependencies": {
    "rimraf": "^3.0.2",
    "rollup": "^1.31.1",
    "typedoc": "^0.16.10",
    "typescript": "^3.7.5"
  }
}
