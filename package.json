{
  "name": "hsluv_ts",
  "version": "0.9.0",
  "description": "A reimplementation of hsluv in typescript",
  "main": "dist/es6/hsluv.bundle.cjs.js",
  "module": "dist/es6/hsluv.js",
  "scripts": {
    "docs": "typedoc --out docs/docs --exclude src/ts/testdata.ts src/ts && touch docs/docs/.nojekyll",
    "site": "cp ./README.md docs/ && cp ./*.png docs/",
    "clean": "rimraf -f dist/ && rimraf -f docs/",
    "rollup": "rollup -c",
    "terser": "terser dist/es6/hsluv.bundle.iife.js --compress --mangle --output dist/es6/hsluv.bundle.iife.min.js",
    "typescript": "tsc",
    "build": "npm run clean && npm run typescript && npm run rollup && npm run terser && npm run docs && npm run site",
    "test": "echo \"This can take 30+ seconds\" && jest --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StoneCypher/hsluv_ts.git"
  },
  "keywords": [
    "hsl",
    "husl",
    "hsluv",
    "typescript"
  ],
  "author": "John Haugeland <stonecypher@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StoneCypher/hsluv_ts/issues"
  },
  "homepage": "https://github.com/StoneCypher/hsluv_ts#readme",
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "jest": "^25.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.31.1",
    "terser": "^4.6.3",
    "ts-jest": "^25.2.0",
    "typedoc": "^0.16.10",
    "typescript": "^3.7.5"
  }
}
